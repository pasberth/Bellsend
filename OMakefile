SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
BUILDDIR      = gh-pages
ALLSPHINXOPTS   = -d $(BUILDDIR)/doctrees $(SPHINXOPTS) source

.PHONY: clean html

clean:
	-rm -rf $(BUILDDIR)

gh-pages: README.rst source/conf.py $(glob source/*.rst) $(glob source/*/*.rst) $(glob source/*/*/*.rst)
    $(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)
