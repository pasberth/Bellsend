SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
BUILDDIR      = gh-pages
ALLSPHINXOPTS   = -d $(BUILDDIR)/doctrees $(SPHINXOPTS) source

.PHONY: clean html

clean:
	-rm -rf $(BUILDDIR)

gh-pages: 
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)
	@echo
	@echo "Build finished. The HTML pages are in $(BUILDDIR)."

